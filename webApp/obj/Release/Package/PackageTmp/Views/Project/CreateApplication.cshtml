@model temporary.Models.CreateAppSettingModel

@{
    ViewBag.Title = "Create an application";
}
<head>
    <link rel="stylesheet" type="text/css" href="~/styling.css">
</head>

<h2>Create a new application</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        @Html.LabelFor(model => model.ApplicationName, htmlAttributes: new { @class = "control-label col-md-2" })
            
        @Html.EditorFor(model => model.ApplicationName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ApplicationName, "", new { @class = "text-danger" })
            
        <br><br>
        <div class="form-group">
         &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; &nbsp;&nbsp; 
        <label for="Username">Select User</label>
             &nbsp;&nbsp;&nbsp;&nbsp;          
                @Html.DropDownListFor(m => m.SelectedUserName,Model.Usernames
                , "Select")<br><br>
            </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create Application" class="btn btn-default" />
                    </div>
                </div>
            </div>
            <br>
}

<div>
    <h5> @Html.ActionLink("Main Admin Page", "AdminPage")</h5>
</div>
