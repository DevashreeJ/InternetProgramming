@model temporary.Models.UserRegistration

@{
    ViewBag.Title = "DeleteUser";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/styling.css">
    </head>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Enter registration number to be deleted</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
               
                @Html.Label("Number to delete")
                @Html.TextBox("registerNumber" )
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Delete User" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Cancel", "HomePage")
    </div>


